<html>
  <head>
    <title>ログイン</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
    <div class="row">
      <form class="col1 s12" action="/login" method="POST">
        <div class="input-field col s12">
          <i class="medium material-icons">account_circle</i>
          <input placeholder="Email address" type="text" name="login_id"/><br/>
        </div>
        <div class="input-field col s12">
          <input placeholder="Password" type="password" name="password"/><br/>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="Login">Login
          <i class="material-icons right">send</i>
        </button>
      </form>
      <div class="card-panel">
        <% if (message) { %>
        <i class="medium material-icons">error</i>
        <p class="red-text text-darken-4"><%= message %></p>
        <% } %>
      </div>
  </body>
</html>
